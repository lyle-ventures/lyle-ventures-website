{
  "name": "lyle-ventures",
  "version": "1.0.0",
  "description": "Lyle Ventures website",
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/css/input.css -o ./src/css/output.css --minify",
    "watch:css": "npx tailwindcss -i ./src/css/input.css -o ./src/css/output.css --watch",
    "build:11ty": "npx @11ty/eleventy",
    "watch:11ty": "npx @11ty/eleventy --serve",
    "start": "npm-run-all --parallel watch:*",
    "build": "npm run build:css && npm run build:11ty"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "tailwindcss": "^3.4.0",
    "npm-run-all": "^4.1.5"
  }
}
