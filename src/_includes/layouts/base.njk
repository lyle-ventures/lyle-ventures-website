<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
  
  <!-- Primary Meta Tags -->
  <title>{% if title == "Home" %}{{ site.title }} — Venture Capital for Frontier Technology{% else %}{{ title }} | {{ site.title }}{% endif %}</title>
  <meta name="title" content="{% if title == 'Home' %}{{ site.title }} — Venture Capital for Frontier Technology{% else %}{{ title }} | {{ site.title }}{% endif %}">
  <meta name="description" content="{{ description or site.description }}">
  <meta name="author" content="Ethan Lyle">
  <meta name="keywords" content="venture capital, VC, frontier technology, AI investing, artificial intelligence, crypto, blockchain, defense tech, energy, nuclear, biomedical, health tech, education technology, seed stage, pre-seed, early stage investing, Ethan Lyle, Lyle Ventures, technology investment, startup funding, deep tech, hard tech">
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta property="og:title" content="{% if title == 'Home' %}{{ site.title }} — Venture Capital for Frontier Technology{% else %}{{ title }} | {{ site.title }}{% endif %}">
  <meta property="og:description" content="{{ description or site.description }}">
  <meta property="og:image" content="{{ site.url }}/logos/og-image.png">
  <meta property="og:site_name" content="Lyle Ventures">
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content="{{ site.url }}{{ page.url }}">
  <meta property="twitter:title" content="{% if title == 'Home' %}{{ site.title }} — Venture Capital for Frontier Technology{% else %}{{ title }} | {{ site.title }}{% endif %}">
  <meta property="twitter:description" content="{{ description or site.description }}">
  <meta property="twitter:image" content="{{ site.url }}/logos/og-image.png">
  
  <!-- Canonical -->
  <link rel="canonical" href="{{ site.url }}{{ page.url }}">
  
  <!-- Favicon -->
  <link rel="icon" href="/logos/lv-icon-indigo.svg" type="image/svg+xml">
  <link rel="apple-touch-icon" href="/logos/lv-icon-indigo-256.png">
  
  <!-- Stylesheets -->
  <link rel="stylesheet" href="/css/output.css">
  
  <!-- Structured Data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Lyle Ventures",
    "description": "{{ site.description }}",
    "url": "{{ site.url }}",
    "logo": "{{ site.url }}/logos/lyle-ventures-indigo-dark.svg",
    "founder": {
      "@type": "Person",
      "name": "Ethan Lyle"
    },
    "contactPoint": {
      "@type": "ContactPoint",
      "email": "ethan@lyle-ventures.xyz",
      "contactType": "investment inquiries"
    },
    "sameAs": [
      "https://www.linkedin.com/in/ethanlyle/"
    ]
  }
  </script>
  
  <!-- Mobile-specific -->
  <meta name="theme-color" content="#08080c">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
</head>
<body class="bg-lv-bg text-white min-h-screen">
  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 border-b border-white/10 safe-area-inset" style="background: rgba(8,8,12,0.9); backdrop-filter: blur(12px); -webkit-backdrop-filter: blur(12px);">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-14 sm:h-16">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-2 sm:gap-2.5">
          <div class="w-7 h-7 sm:w-8 sm:h-8 border-[1.5px] border-white flex items-center justify-center">
            <span class="text-[9px] sm:text-[11px] font-semibold tracking-wide">LV</span>
          </div>
          <span class="text-base sm:text-lg font-semibold tracking-tight">Lyle<span class="text-indigo-500" style="margin-left:-0.03em;margin-right:-0.1em;font-size:1.15em;">.</span>Ventures</span>
        </a>
        
        <!-- Desktop Nav Links -->
        <div class="hidden sm:flex items-center gap-6 lg:gap-8">
          <a href="/portfolio/" class="nav-link">Portfolio</a>
          <a href="/thesis/" class="nav-link">Thesis</a>
          <a href="/contact/" class="nav-link">Contact</a>
        </div>
        
        <!-- Mobile Menu Button -->
        <button id="mobile-menu-btn" class="sm:hidden p-2 -mr-2 text-white/60" onclick="toggleMobileMenu()">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"/>
            <path id="close-icon" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden sm:hidden border-t border-white/10 bg-lv-bg">
      <div class="px-4 py-4 space-y-3">
        <a href="/portfolio/" class="block py-2 text-lg text-white/80 hover:text-white">Portfolio</a>
        <a href="/thesis/" class="block py-2 text-lg text-white/80 hover:text-white">Thesis</a>
        <a href="/contact/" class="block py-2 text-lg text-white/80 hover:text-white">Contact</a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="pt-14 sm:pt-16">
    {{ content | safe }}
  </main>

  <!-- Footer -->
  <footer class="border-t border-white/10 mt-16 sm:mt-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-6 sm:gap-8">
        <!-- Sectors -->
        <div class="flex flex-wrap gap-x-3 sm:gap-x-4 gap-y-2">
          {% for sector in site.sectors %}
          <span class="text-xs sm:text-sm" style="color: {{ sector.color }}">{{ sector.name | lower }}</span>
          {% if not loop.last %}<span class="text-white/20">|</span>{% endif %}
          {% endfor %}
        </div>
        
        <!-- Logo -->
        <a href="/" class="flex items-center gap-2">
          <div class="w-6 h-6 border border-white/40 flex items-center justify-center">
            <span class="text-[8px] font-semibold tracking-wide text-white/60">LV</span>
          </div>
        </a>
      </div>
      
      <div class="mt-6 sm:mt-8 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <p class="text-xs sm:text-sm text-white/30">© 2025 Lyle Ventures. All rights reserved.</p>
        <a href="mailto:ethan@lyle-ventures.xyz" class="text-xs sm:text-sm text-white/30 hover:text-white/60 transition-colors">
          ethan@lyle-ventures.xyz
        </a>
      </div>
    </div>
  </footer>

  <!-- Mobile Menu Script -->
  <script>
    function toggleMobileMenu() {
      const menu = document.getElementById('mobile-menu');
      const menuIcon = document.getElementById('menu-icon');
      const closeIcon = document.getElementById('close-icon');
      
      menu.classList.toggle('hidden');
      menuIcon.classList.toggle('hidden');
      closeIcon.classList.toggle('hidden');
    }
  </script>
</body>
</html>
