<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">

  <!-- Primary Meta Tags -->
  <title>{% if title == "Home" %}{{ site.title }} — Venture Capital for Frontier Technology{% else %}{{ title }} | {{ site.title }}{% endif %}</title>
  <meta name="title" content="{% if title == 'Home' %}{{ site.title }} — Venture Capital for Frontier Technology{% else %}{{ title }} | {{ site.title }}{% endif %}">
  <meta name="description" content="{{ description or site.description }}">
  <meta name="author" content="Ethan Lyle">
  <meta name="keywords" content="venture capital, VC, frontier technology, AI investing, artificial intelligence, crypto, blockchain, defense tech, energy, nuclear, biomedical, health tech, education technology, seed stage, pre-seed, early stage investing, Ethan Lyle, Lyle Ventures, technology investment, startup funding, deep tech, hard tech">

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta property="og:title" content="{% if title == 'Home' %}{{ site.title }} — Venture Capital for Frontier Technology{% else %}{{ title }} | {{ site.title }}{% endif %}">
  <meta property="og:description" content="{{ description or site.description }}">
  <meta property="og:image" content="{{ site.url }}/logos/og-image.png">
  <meta property="og:site_name" content="Lyle Ventures">

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content="{{ site.url }}{{ page.url }}">
  <meta property="twitter:title" content="{% if title == 'Home' %}{{ site.title }} — Venture Capital for Frontier Technology{% else %}{{ title }} | {{ site.title }}{% endif %}">
  <meta property="twitter:description" content="{{ description or site.description }}">
  <meta property="twitter:image" content="{{ site.url }}/logos/og-image.png">

  <!-- Canonical -->
  <link rel="canonical" href="{{ site.url }}{{ page.url }}">

  <!-- Favicon -->
  <link rel="icon" href="/logos/lv-icon-indigo.svg" type="image/svg+xml">
  <link rel="apple-touch-icon" href="/logos/lv-icon-indigo-256.png">

  <!-- Inter Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

  <!-- Stylesheets -->
  <link rel="stylesheet" href="/css/output.css">

  <!-- Netlify Identity (for CMS) -->
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>

  <!-- Structured Data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Lyle Ventures",
    "description": "{{ site.description }}",
    "url": "{{ site.url }}",
    "logo": "{{ site.url }}/logos/lyle-ventures-standard.svg",
    "founder": {
      "@type": "Person",
      "name": "Ethan Lyle"
    },
    "contactPoint": {
      "@type": "ContactPoint",
      "email": "ethan@lyle-ventures.xyz",
      "contactType": "investment inquiries"
    },
    "sameAs": [
      "https://www.linkedin.com/in/ethanlyle/"
    ]
  }
  </script>

  <!-- Mobile-specific -->
  <meta name="theme-color" content="#ffffff">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="default">

  <!-- AI/LLM Crawler Control -->
  <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">
  <meta name="googlebot" content="index, follow">
  <meta name="bingbot" content="index, follow">
  <meta name="ai-content-declaration" content="This content is not licensed for AI training.">
  <meta name="cc:attributionName" content="Lyle Ventures">
  <meta name="cc:license" content="All rights reserved">
</head>
<body class="bg-white text-gray-900 min-h-screen">
  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 border-b border-black/10 safe-area-inset" style="background: rgba(255,255,255,0.9); backdrop-filter: blur(12px); -webkit-backdrop-filter: blur(12px);">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-14 sm:h-16">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-2 sm:gap-2.5">
          <div class="w-7 h-7 sm:w-8 sm:h-8 border-[1.5px] border-indigo-500 flex items-center justify-center">
            <span class="text-[11px] sm:text-[13px] font-semibold tracking-wide text-indigo-500">LV</span>
          </div>
          <span class="text-base sm:text-lg font-semibold tracking-tight text-gray-900">Lyle<span class="text-indigo-500" style="margin-left:0.02em;margin-right:-0.1em;font-size:1.25em;">.</span>Ventures</span>
        </a>

        <!-- Desktop Nav Links -->
        <div class="hidden sm:flex items-center gap-6 lg:gap-8">
          <a href="/thesis/" class="text-xs font-bold uppercase tracking-widest text-gray-500 hover:text-gray-900 transition-colors">Thesis</a>
          <a href="/portfolio/" class="text-xs font-bold uppercase tracking-widest text-gray-500 hover:text-gray-900 transition-colors">Portfolio</a>
          <a href="/contact/" class="text-xs font-bold uppercase tracking-widest text-gray-500 hover:text-gray-900 transition-colors">Contact</a>
        </div>

        <!-- Mobile Menu Button -->
        <button id="mobile-menu-btn" class="sm:hidden p-2 -mr-2 text-gray-500" onclick="toggleMobileMenu()">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"/>
            <path id="close-icon" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden sm:hidden border-t border-black/10 bg-white">
      <div class="px-4 py-4 space-y-3">
        <a href="/thesis/" class="block py-2 text-lg text-gray-600 hover:text-gray-900">Thesis</a>
        <a href="/portfolio/" class="block py-2 text-lg text-gray-600 hover:text-gray-900">Portfolio</a>
        <a href="/contact/" class="block py-2 text-lg text-gray-600 hover:text-gray-900">Contact</a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="pt-14 sm:pt-16">
    {{ content | safe }}
  </main>

  <!-- Footer -->
  <footer class="border-t border-black/10 mt-16 sm:mt-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
      <!-- Sectors -->
      <div class="flex flex-wrap justify-center gap-x-4 sm:gap-x-5 gap-y-2 mb-6 sm:mb-8">
        {% for sector in site.sectors %}
        {% if not sector.deemphasized %}
        <span class="text-sm sm:text-base font-medium" style="color: {{ sector.color }}">{{ sector.name | lower }}</span>
        {% endif %}
        {% endfor %}
      </div>

      <!-- Copyright -->
      <div class="text-center">
        <p class="text-xs sm:text-sm text-gray-400">© 2025 Lyle Ventures. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <!-- Mobile Menu Script -->
  <script>
    function toggleMobileMenu() {
      const menu = document.getElementById('mobile-menu');
      const menuIcon = document.getElementById('menu-icon');
      const closeIcon = document.getElementById('close-icon');

      menu.classList.toggle('hidden');
      menuIcon.classList.toggle('hidden');
      closeIcon.classList.toggle('hidden');
    }
  </script>

  <!-- Netlify Identity redirect -->
  <script>
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", user => {
        if (!user) {
          window.netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
          });
        }
      });
    }
  </script>
</body>
</html>
