<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Portfolio Admin | Lyle Ventures</title>
  <meta name="robots" content="noindex, nofollow">
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            'lv-accent': '#6366f1',
          }
        }
      }
    }
  </script>
  <style>
    .drag-over { border-color: #6366f1 !important; background: rgba(99, 102, 241, 0.1) !important; }
    .dragging { opacity: 0.5; }
  </style>
</head>
<body class="bg-white text-gray-900 min-h-screen">

  <!-- Login Screen -->
  <div id="login-screen" class="min-h-screen flex items-center justify-center p-6">
    <div class="w-full max-w-sm">
      <div class="flex items-center gap-2.5 mb-8 justify-center">
        <div class="w-8 h-8 border-[1.5px] border-gray-900 flex items-center justify-center">
          <span class="text-[11px] font-semibold tracking-wide">LV</span>
        </div>
        <span class="text-lg font-semibold">Admin</span>
      </div>

      <div class="bg-gray-50 border border-black/10 rounded-xl p-6">
        <label class="block text-sm text-gray-500 mb-2">Password</label>
        <input
          type="password"
          id="password-input"
          class="w-full bg-white border border-black/20 rounded-lg px-4 py-3 text-gray-900 focus:border-lv-accent focus:outline-none"
          placeholder="Enter admin password"
          onkeypress="if(event.key === 'Enter') checkPassword()"
        >
        <button
          onclick="checkPassword()"
          class="w-full mt-4 bg-lv-accent hover:bg-indigo-600 text-white font-semibold py-3 rounded-lg transition-colors"
        >
          Access Admin
        </button>
        <p id="login-error" class="text-red-500 text-sm mt-3 hidden">Incorrect password</p>
      </div>
    </div>
  </div>

  <!-- Admin Dashboard -->
  <div id="admin-dashboard" class="hidden">
    <!-- Header -->
    <header class="border-b border-black/10 bg-gray-50">
      <div class="max-w-5xl mx-auto px-6 py-4 flex items-center justify-between">
        <div class="flex items-center gap-4">
          <a href="/" class="flex items-center gap-2">
            <div class="w-6 h-6 border border-gray-400 flex items-center justify-center">
              <span class="text-[8px] font-semibold text-gray-500">LV</span>
            </div>
          </a>
          <span class="text-gray-400">→</span>
          <span class="font-semibold">Portfolio Admin</span>
        </div>
        <button onclick="logout()" class="text-sm text-gray-500 hover:text-gray-900">Logout</button>
      </div>
    </header>

    <main class="max-w-5xl mx-auto px-6 py-8">
      <!-- Actions Bar -->
      <div class="flex items-center justify-between mb-8">
        <div>
          <h1 class="text-2xl font-bold">Portfolio Companies</h1>
          <p class="text-gray-500 text-sm mt-1">Drag to reorder. Changes auto-save to local storage.</p>
        </div>
        <div class="flex gap-3">
          <button
            onclick="exportData()"
            class="px-4 py-2 border border-black/20 rounded-lg text-sm hover:bg-gray-50 transition-colors"
          >
            Export JSON
          </button>
          <button
            onclick="openModal()"
            class="px-4 py-2 bg-lv-accent hover:bg-indigo-600 text-white rounded-lg text-sm font-semibold transition-colors"
          >
            + Add Company
          </button>
        </div>
      </div>

      <!-- Portfolio List -->
      <div id="portfolio-list" class="space-y-3">
        <!-- Companies will be rendered here -->
      </div>

      <!-- Instructions -->
      <div class="mt-12 p-6 bg-gray-50 border border-black/10 rounded-xl">
        <h3 class="font-semibold mb-3">How to update the live site</h3>
        <ol class="text-gray-500 text-sm space-y-2 list-decimal list-inside">
          <li>Make your changes above (add, edit, remove, reorder)</li>
          <li>Click "Export JSON" to download the updated portfolio data</li>
          <li>Replace <code class="bg-gray-200 px-2 py-0.5 rounded">src/_data/portfolio.js</code> with the exported data</li>
          <li>Commit and push to GitHub — Netlify will auto-deploy</li>
        </ol>
      </div>
    </main>
  </div>

  <!-- Add/Edit Modal -->
  <div id="modal" class="fixed inset-0 bg-black/50 flex items-center justify-center p-6 hidden z-50">
    <div class="bg-white border border-black/10 rounded-xl w-full max-w-lg max-h-[90vh] overflow-y-auto shadow-xl">
      <div class="p-6 border-b border-black/10 flex items-center justify-between">
        <h2 id="modal-title" class="text-xl font-semibold">Add Company</h2>
        <button onclick="closeModal()" class="text-gray-400 hover:text-gray-900 text-2xl">&times;</button>
      </div>

      <form id="company-form" class="p-6 space-y-4">
        <input type="hidden" id="edit-index" value="-1">

        <div>
          <label class="block text-sm text-gray-500 mb-2">Company Name *</label>
          <input type="text" id="form-name" required
            class="w-full bg-white border border-black/20 rounded-lg px-4 py-3 text-gray-900 focus:border-lv-accent focus:outline-none"
            placeholder="e.g. Acme Corp">
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm text-gray-500 mb-2">Sector *</label>
            <select id="form-sector" required
              class="w-full bg-white border border-black/20 rounded-lg px-4 py-3 text-gray-900 focus:border-lv-accent focus:outline-none">
              <option value="AI">AI</option>
              <option value="Crypto">Crypto</option>
              <option value="Defense">Defense</option>
              <option value="Education">Education</option>
              <option value="Energy">Energy</option>
              <option value="Biomedical">Biomedical</option>
            </select>
          </div>
          <div>
            <label class="block text-sm text-gray-500 mb-2">Sector Code</label>
            <input type="text" id="form-code" maxlength="3"
              class="w-full bg-white border border-black/20 rounded-lg px-4 py-3 text-gray-900 focus:border-lv-accent focus:outline-none"
              placeholder="AI">
          </div>
        </div>

        <div>
          <label class="block text-sm text-gray-500 mb-2">Description *</label>
          <textarea id="form-description" required rows="3"
            class="w-full bg-white border border-black/20 rounded-lg px-4 py-3 text-gray-900 focus:border-lv-accent focus:outline-none resize-none"
            placeholder="Brief description of the company..."></textarea>
        </div>

        <div>
          <label class="block text-sm text-gray-500 mb-2">Website URL</label>
          <input type="url" id="form-url"
            class="w-full bg-white border border-black/20 rounded-lg px-4 py-3 text-gray-900 focus:border-lv-accent focus:outline-none"
            placeholder="https://example.com">
        </div>

        <div class="flex gap-3 pt-4">
          <button type="button" onclick="closeModal()"
            class="flex-1 px-4 py-3 border border-black/20 rounded-lg hover:bg-gray-50 transition-colors">
            Cancel
          </button>
          <button type="submit"
            class="flex-1 px-4 py-3 bg-lv-accent hover:bg-indigo-600 text-white rounded-lg font-semibold transition-colors">
            Save Company
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Configuration
    const ADMIN_PASSWORD = 'lyleventures2025'; // Change this!
    const STORAGE_KEY = 'lv_portfolio_data';

    // Sector colors
    const sectorColors = {
      'AI': '#00D4FF',
      'Crypto': '#AA66FF',
      'Defense': '#FF3366',
      'Education': '#FF6B35',
      'Energy': '#00FF88',
      'Biomedical': '#FFB800'
    };

    const sectorCodes = {
      'AI': 'AI',
      'Crypto': 'CRY',
      'Defense': 'DEF',
      'Education': 'EDU',
      'Energy': 'NRG',
      'Biomedical': 'BIO'
    };

    // Default portfolio data
    const defaultPortfolio = [
      {
        name: "SVRN",
        sector: "Biomedical",
        code: "BIO",
        color: "#FFB800",
        description: "SVRN is a community passionate about offering long-term solutions to accelerate biomedical innovation.",
        url: "https://www.svrnenterprises.com"
      },
      {
        name: "Valley Arcade",
        sector: "Crypto",
        code: "CRY",
        color: "#AA66FF",
        description: "Valley connects gamers to the Blockchain via physical arcade cabinets. Valley develops and publishes games.",
        url: "https://www.valley-arcade.com"
      },
      {
        name: "Phoenix Fund",
        sector: "Education",
        code: "EDU",
        color: "#FF6B35",
        description: "Phoenix is a venture capital firm backing Harvard's top founders at the earliest stages, from angel to seed.",
        url: "https://www.phoenixclub.vc"
      },
      {
        name: "EloraHQ",
        sector: "AI",
        code: "AI",
        color: "#00D4FF",
        description: "EloraHQ is an advanced AI-powered care assistant that offers 24/7 personalized support, creates care plans, and more.",
        url: "https://elorahq.com"
      },
      {
        name: "Stealth",
        sector: "Energy",
        code: "NRG",
        color: "#00FF88",
        description: "Nuclear energy project in stealth mode.",
        url: null
      },
      {
        name: "Mearas",
        sector: "Defense",
        code: "DEF",
        color: "#FF3366",
        description: "Mearas is pioneering electric off-road vehicles for civilian and military use. Making optionally manned, AI capable vehicles for the future today.",
        url: "https://mearas.us"
      }
    ];

    // State
    let portfolio = [];
    let draggedItem = null;

    // Initialize
    function init() {
      const saved = localStorage.getItem(STORAGE_KEY);
      portfolio = saved ? JSON.parse(saved) : [...defaultPortfolio];
      renderPortfolio();
    }

    // Auth
    function checkPassword() {
      const input = document.getElementById('password-input').value;
      if (input === ADMIN_PASSWORD) {
        document.getElementById('login-screen').classList.add('hidden');
        document.getElementById('admin-dashboard').classList.remove('hidden');
        sessionStorage.setItem('lv_admin_auth', 'true');
      } else {
        document.getElementById('login-error').classList.remove('hidden');
      }
    }

    function logout() {
      sessionStorage.removeItem('lv_admin_auth');
      location.reload();
    }

    // Check if already logged in
    if (sessionStorage.getItem('lv_admin_auth') === 'true') {
      document.getElementById('login-screen').classList.add('hidden');
      document.getElementById('admin-dashboard').classList.remove('hidden');
    }

    // Render portfolio list
    function renderPortfolio() {
      const list = document.getElementById('portfolio-list');
      list.innerHTML = portfolio.map((company, index) => `
        <div
          class="bg-gray-50 border border-black/10 rounded-xl p-4 flex items-center gap-4 cursor-move hover:border-black/20 transition-colors"
          draggable="true"
          data-index="${index}"
          ondragstart="handleDragStart(event)"
          ondragend="handleDragEnd(event)"
          ondragover="handleDragOver(event)"
          ondrop="handleDrop(event)"
        >
          <div class="text-gray-400 text-lg">☰</div>

          <div class="w-3 h-3 rounded-full flex-shrink-0" style="background-color: ${company.color}"></div>

          <div class="flex-1 min-w-0">
            <div class="flex items-center gap-2">
              <span class="font-bold text-lg">${company.name}</span>
              <span class="text-xs font-mono px-2 py-0.5 rounded border" style="color: ${company.color}; border-color: ${company.color}40">${company.code}</span>
            </div>
            <p class="text-gray-500 text-sm truncate">${company.description}</p>
          </div>

          <div class="flex items-center gap-2 flex-shrink-0">
            ${company.url ? `<a href="${company.url}" target="_blank" class="p-2 text-gray-400 hover:text-gray-900">↗</a>` : ''}
            <button onclick="editCompany(${index})" class="p-2 text-gray-400 hover:text-gray-900">✎</button>
            <button onclick="deleteCompany(${index})" class="p-2 text-gray-400 hover:text-red-500">✕</button>
          </div>
        </div>
      `).join('');
    }

    // Drag and drop
    function handleDragStart(e) {
      draggedItem = e.target;
      e.target.classList.add('dragging');
      e.dataTransfer.effectAllowed = 'move';
    }

    function handleDragEnd(e) {
      e.target.classList.remove('dragging');
      document.querySelectorAll('.drag-over').forEach(el => el.classList.remove('drag-over'));
    }

    function handleDragOver(e) {
      e.preventDefault();
      const target = e.target.closest('[draggable]');
      if (target && target !== draggedItem) {
        target.classList.add('drag-over');
      }
    }

    function handleDrop(e) {
      e.preventDefault();
      const target = e.target.closest('[draggable]');
      if (target && target !== draggedItem) {
        const fromIndex = parseInt(draggedItem.dataset.index);
        const toIndex = parseInt(target.dataset.index);

        const item = portfolio.splice(fromIndex, 1)[0];
        portfolio.splice(toIndex, 0, item);

        saveAndRender();
      }
      document.querySelectorAll('.drag-over').forEach(el => el.classList.remove('drag-over'));
    }

    // Modal
    function openModal(editIndex = -1) {
      document.getElementById('modal').classList.remove('hidden');
      document.getElementById('edit-index').value = editIndex;

      if (editIndex >= 0) {
        const company = portfolio[editIndex];
        document.getElementById('modal-title').textContent = 'Edit Company';
        document.getElementById('form-name').value = company.name;
        document.getElementById('form-sector').value = company.sector;
        document.getElementById('form-code').value = company.code;
        document.getElementById('form-description').value = company.description;
        document.getElementById('form-url').value = company.url || '';
      } else {
        document.getElementById('modal-title').textContent = 'Add Company';
        document.getElementById('company-form').reset();
      }
    }

    function closeModal() {
      document.getElementById('modal').classList.add('hidden');
      document.getElementById('company-form').reset();
    }

    // Form handling
    document.getElementById('company-form').addEventListener('submit', function(e) {
      e.preventDefault();

      const editIndex = parseInt(document.getElementById('edit-index').value);
      const sector = document.getElementById('form-sector').value;

      const company = {
        name: document.getElementById('form-name').value,
        sector: sector,
        code: document.getElementById('form-code').value || sectorCodes[sector],
        color: sectorColors[sector],
        description: document.getElementById('form-description').value,
        url: document.getElementById('form-url').value || null
      };

      if (editIndex >= 0) {
        portfolio[editIndex] = company;
      } else {
        portfolio.push(company);
      }

      saveAndRender();
      closeModal();
    });

    // Auto-fill sector code
    document.getElementById('form-sector').addEventListener('change', function(e) {
      const codeInput = document.getElementById('form-code');
      if (!codeInput.value) {
        codeInput.value = sectorCodes[e.target.value];
      }
    });

    // CRUD operations
    function editCompany(index) {
      openModal(index);
    }

    function deleteCompany(index) {
      if (confirm(`Delete "${portfolio[index].name}"?`)) {
        portfolio.splice(index, 1);
        saveAndRender();
      }
    }

    function saveAndRender() {
      localStorage.setItem(STORAGE_KEY, JSON.stringify(portfolio));
      renderPortfolio();
    }

    // Export
    function exportData() {
      const jsContent = `module.exports = ${JSON.stringify(portfolio, null, 2)};`;
      const blob = new Blob([jsContent], { type: 'application/javascript' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = 'portfolio.js';
      a.click();
      URL.revokeObjectURL(url);
    }

    // Initialize on load
    init();
  </script>
</body>
</html>
