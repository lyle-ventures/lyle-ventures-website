---
layout: layouts/base.njk
title: Portfolio
description: Companies we've backed across AI, crypto, defense, energy, and health.
permalink: /portfolio/
---

<section class="py-24">
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-16">
      <p class="font-mono text-xs uppercase tracking-widest text-gray-400 mb-6">Portfolio</p>
      <h1 class="font-sans font-light tracking-tighter text-5xl md:text-6xl max-w-3xl text-gray-900" style="line-height: 0.95;">
        Companies we've backed
      </h1>
    </div>

    <!-- Sector filter -->
    <div class="flex flex-wrap gap-3 mb-12">
      <button onclick="filterSector('all')" data-sector="all" class="sector-btn px-4 py-2 rounded-full bg-gray-900 text-white text-xs font-bold uppercase tracking-wider transition-all">All</button>
      {% for sector in site.sectors %}
      <button onclick="filterSector('{{ sector.name }}')" data-sector="{{ sector.name }}" class="sector-btn px-4 py-2 rounded-full border text-xs font-bold uppercase tracking-wider transition-all {% if sector.deemphasized %}border-black/10 text-gray-400 hover:border-black/20{% else %}border-black/20 text-gray-500 hover:border-black/40{% endif %}">{{ sector.name }}</button>
      {% endfor %}
    </div>

    <!-- Portfolio Grid -->
    <div id="portfolio-grid" class="grid md:grid-cols-2 gap-4">
      {% for company in portfolio.companies %}
      <a href="{{ company.url or '#' }}"
         data-sector="{{ company.sector }}"
         class="company-card group p-8 rounded-xl border border-black/10 hover:border-black/20 bg-gray-50 transition-all {% if not company.url %}cursor-default{% endif %}"
         {% if company.url %}target="_blank" rel="noopener"{% endif %}>

        <!-- Header: Logo + Sector Tag -->
        <div class="flex items-start justify-between mb-6">
          {% if company.logo %}
          <div class="w-24 h-24 rounded-xl overflow-hidden bg-white border border-black/10 flex-shrink-0">
            <img src="{{ company.logo }}" alt="{{ company.name }} logo" class="w-full h-full object-contain p-3">
          </div>
          {% endif %}
          <div class="flex items-center gap-2">
            <span class="inline-block px-3 py-1.5 rounded-full text-xs font-bold uppercase tracking-wide border"
                  style="color: {{ company.color }}; border-color: {{ company.color }}40;">
              {{ company.sector }}
            </span>
            {% if company.url %}
            <svg class="w-5 h-5 text-gray-300 group-hover:text-gray-500 group-hover:translate-x-1 group-hover:-translate-y-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 17L17 7M17 7H7M17 7V17"/>
            </svg>
            {% endif %}
          </div>
        </div>

        <!-- Company Name -->
        <h2 class="font-sans font-black uppercase tracking-tight text-3xl mb-4 text-gray-900" style="letter-spacing: -0.03em;">{{ company.name }}</h2>

        <!-- Description -->
        <p class="text-gray-500 leading-relaxed">{{ company.description }}</p>
      </a>
      {% endfor %}
    </div>
  </div>
</section>

<script>
  function filterSector(sector) {
    const buttons = document.querySelectorAll('.sector-btn');
    const cards = document.querySelectorAll('.company-card');

    // Update button styles
    buttons.forEach(btn => {
      const isDeemphasized = btn.dataset.sector === 'Fund of Funds';

      if (btn.dataset.sector === sector) {
        btn.classList.remove('border', 'border-black/20', 'border-black/10', 'text-gray-500', 'text-gray-400');
        btn.classList.add('bg-gray-900', 'text-white');
      } else {
        btn.classList.remove('bg-gray-900', 'text-white');
        btn.classList.add('border');
        if (isDeemphasized) {
          btn.classList.add('border-black/10', 'text-gray-400');
          btn.classList.remove('border-black/20', 'text-gray-500');
        } else {
          btn.classList.add('border-black/20', 'text-gray-500');
          btn.classList.remove('border-black/10', 'text-gray-400');
        }
      }
    });

    // Filter cards
    cards.forEach(card => {
      if (sector === 'all' || card.dataset.sector === sector) {
        card.style.display = '';
      } else {
        card.style.display = 'none';
      }
    });
  }
</script>
