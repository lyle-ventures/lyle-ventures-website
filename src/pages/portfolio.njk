---
layout: layouts/base.njk
title: Portfolio
description: Companies we've backed across AI, crypto, defense, education, energy, and health.
permalink: /portfolio/
---

<section class="py-24">
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-16">
      <p class="label mb-6">Portfolio</p>
      <h1 class="headline-caps text-5xl md:text-6xl">
        The<br>
        <span class="text-transparent" style="-webkit-text-stroke: 1.5px white;">Companies</span>
      </h1>
    </div>
    
    <!-- Sector filter (visual only for now) -->
    <div class="flex flex-wrap gap-3 mb-12">
      <button class="px-4 py-2 rounded-full bg-white text-black text-xs font-bold uppercase tracking-wider">All</button>
      {% for sector in site.sectors %}
      <button class="px-4 py-2 rounded-full border border-white/20 text-xs font-bold uppercase tracking-wider text-white/60 hover:border-white/40 transition-colors">{{ sector.name }}</button>
      {% endfor %}
    </div>
    
    <!-- Portfolio Grid -->
    <div class="grid md:grid-cols-2 gap-4">
      {% for company in portfolio %}
      <a href="{{ company.url or '#' }}" 
         class="group p-8 rounded-xl border border-white/10 hover:border-white/20 bg-lv-bg-secondary transition-all"
         {% if company.url %}target="_blank" rel="noopener"{% endif %}>
        
        <!-- Sector Tag -->
        <div class="flex items-center justify-between mb-6">
          <span class="inline-block px-3 py-1.5 rounded-full text-xs font-bold uppercase tracking-wide border"
                style="color: {{ company.color }}; border-color: {{ company.color }}40;">
            {{ company.sector }}
          </span>
          {% if company.url %}
          <svg class="w-5 h-5 text-white/30 group-hover:text-white/60 group-hover:translate-x-1 group-hover:-translate-y-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 17L17 7M17 7H7M17 7V17"/>
          </svg>
          {% endif %}
        </div>
        
        <!-- Company Name -->
        <h2 class="company-name text-4xl mb-4">{{ company.name }}</h2>
        
        <!-- Description -->
        <p class="text-white/50 leading-relaxed">{{ company.description }}</p>
      </a>
      {% endfor %}
    </div>
  </div>
</section>
